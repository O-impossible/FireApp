<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#EFEBE9"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/request_textview_tournament_name"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_width="260dp"
            />
        <TextView
            android:layout_margin="4dp"
            android:id="@+id/request_textview_user_name"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="260dp"
            />
        <TextView
            android:id="@+id/request_textview_request_type"
            android:layout_height="wrap_content"
            android:layout_width="260dp"
            android:layout_margin="4dp"
            />
        <TextView
            android:id="@+id/request_textview_sport"
            android:layout_height="wrap_content"
            android:layout_width="260dp"
            android:layout_margin="4dp"
            />
        <TextView
            android:id="@+id/request_textview_user_faculty"
            android:layout_height="wrap_content"
            android:layout_width="260dp"
            android:layout_margin="4dp"
            />
        <TextView
            android:id="@+id/request_textview_user_year"
            android:layout_height="wrap_content"
            android:layout_width="260dp"
            android:layout_margin="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/accept_request_button"
            android:background="#76FF03"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Accept"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/deny_request_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="#F44336"
            android:text="Deny"
            android:layout_gravity="center"

            />
    </LinearLayout>
</LinearLayout>